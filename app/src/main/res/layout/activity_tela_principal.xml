<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="br.claretiano.app01.TelaPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <ImageView
        android:src="@drawable/hamburger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Tipo"
        android:textSize="24dp"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rdgTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdbTipoSimples"
            android:checked="true"
            android:text="Simples"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rdbTipoDuplo"
            android:text="Duplo"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rdbTipoTriplo"
            android:text="Triplo"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>


    <TextView
        android:layout_marginTop="20dp"
        android:text="Quantidade"
        android:textSize="24dp"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtQuantidade"
        android:textSize="24dp"
        android:background="@color/cinza"
        android:hint="Quantidade desejada"
        android:inputType="numberSigned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Acompanhamento(s)"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textColor="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/ckbBatataFrita"
        android:text="Batata Frita"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/ckbBacon"
        android:text="Bacon"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/ckbNuggets"
        android:text="Nuggets"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/ckbDobroQueijo"
        android:text="DobroQueijo"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_marginTop="20dp"
        android:text="Salvar"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
